{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2020",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "lib"
  },

  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/Generator/Encoding/MustacheEncoding.ts"
  ],

  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/Generator/templates"]
}