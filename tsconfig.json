{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2020",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "lib",
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": ["src/Generator/templates"]
}